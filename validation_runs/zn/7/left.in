&CONTROL
  calculation  = "scf",
  prefix       = "left",
  outdir       = "./out",
  pseudo_dir   = "../",
  do_epcdft    = .true.,
  verbosity = "high" 
  wf_collect = .true.
! restart_mode = 'restart'
/
&SYSTEM
  nosym = .true.
  ibrav     = 1,
  a         = 30,
  nat       = 2,
  ntyp      = 1,
  ecutwfc   = 100,
  tot_charge = +1
  nspin   = 2,
  tot_magnetization = 1
  assume_isolated = 'mt'
  hirshfeld = .TRUE.
  fragment_atom1    = 1,
  fragment_atom2    = 1,
  epcdft_amp        = 3.30E-01,
  epcdft_electrons  = 1.,
  epcdft_thr = 1.0E-02
  epcdft_delta_fld = 0.02D0
! occupations = 'smearing'
! smearing = 'gauss'
! degauss = 0.005D0
/
&ELECTRONS
  conv_thr    = 1.D-9,
  diago_full_acc = .true.
! mixing_beta = 0.30,
/
K_POINTS {Gamma}

ATOMIC_SPECIES
Zn 0.0 Zn.pbe-mt_fhi.UPF
ATOMIC_POSITIONS (angstrom)
Zn 0 0 0
Zn 7 0 0
