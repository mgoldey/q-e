&CONTROL
  calculation  = "scf",
  prefix       = "left",
  outdir       = "./out",
  pseudo_dir   = "../pseudo",
  do_epcdft    = .true.,
  verbosity = "high" 
  wf_collect = .true.
/
&SYSTEM
  nosym = .true.
  ibrav     = 1,
  a         = 12,
  nat       = 2,
  ntyp      = 2,
  ecutwfc   = 60,
  nspin   = 2,
  tot_charge = 0
  tot_magnetization = 0
  starting_magnetization(1)=1
  starting_magnetization(2)=-1

/
&ELECTRONS
 ! startingpot = 'file'
 ! startingwfc = 'file'
  conv_thr    = 1.D-8,
  mixing_beta = 0.30,
/

EPCDFT 
1 1e-2 1e-2 
delta_spin  1 1 2 2 2.0 0.2
!delta_charge 1 1 2 2 2.0 0.9

ATOMIC_SPECIES
H1 0.0 H.pbe-mt_fhi.UPF
H2 0.0 H.pbe-mt_fhi.UPF

ATOMIC_POSITIONS (angstrom)
H1 0 0 0
H2 5 0 0

K_POINTS {Gamma}
