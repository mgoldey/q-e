&CONTROL
  calculation  = "scf",
  prefix       = "zn",
  outdir       = "./out",
  pseudo_dir   = "../pseudo",
  do_epcdft    = .true.,
  tefield      = .true.
  verbosity = "high" 
  wf_collect = .true.
/
&SYSTEM
  nosym = .true.
  ibrav     = 1,
  a         = 10,
  nat       = 2,
  ntyp      = 1,
  ecutwfc   = 60,
  tot_charge = +1
  nspin   = 2,
  tot_magnetization = 1
  fragment_atom1    = 1,
  fragment_atom2    = 1,
  epcdft_amp        = -6.0E-01,
  epcdft_electrons  = 1.,
  epcdft_thr = 1e-4
/
&ELECTRONS
 ! startingpot = 'file'
 ! startingwfc = 'file'
  conv_thr    = 1.D-8,
  mixing_beta = 0.30,
/
K_POINTS {Gamma}

ATOMIC_SPECIES
Zn 0.0 Zn.pbe-mt_fhi.UPF
ATOMIC_POSITIONS (angstrom)
Zn 0 0 0
Zn 5 0 0
